@page "/NotFound"
@layout LoginLayout

<PageTitle>404 - Página no encontrada</PageTitle>

<MudGrid Class="d-flex align-center justify-center fill-height">
    <MudItem xs="12" sm="6" md="6" lg="4" Class="d-flex align-center justify-center">
        <MudPaper Class="d-flex flex-column align-center justify-center gap-2 pa-4">
            <MudIcon Icon="@Icons.Material.Filled.ErrorOutline" Size="Size.Large" Color="Color.Error" />
            <MudText Typo="Typo.h1" Align="Align.Center" Color="Color.Error"><b>404</b></MudText>
            <MudText Typo="Typo.h4" Align="Align.Center">Página no encontrada</MudText>
            <MudText Typo="Typo.body1" Align="Align.Center">Lo sentimos, no encontramos lo que estabas buscando.</MudText>
            <MudButton Variant="Variant.Filled" Color="Color.Primary" Href="/">
                Ir al inicio
            </MudButton>
        </MudPaper>
    </MudItem>
</MudGrid>