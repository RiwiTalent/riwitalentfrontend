    public bool CheckBox2 { get; set; } = false;
    public bool CheckBox3 { get; set; } = false;

    public string ButtonDetails = "Detalle";
    private List<Coder>? coders;

    //pagination
    private List<Coder>? paginatedCoders;
    private int totalCoders;
