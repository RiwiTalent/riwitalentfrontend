@inherits ComponentBase

<MudDialog>
    <DialogContent>
        <MudTextField T="string" Label="Name" @bind-Value="_name"></MudTextField>
        <MudSelect T="string" Label="Favorite Coffee" @bind-Value="_favoriteCoffee" AnchorOrigin="Origin.BottomCenter">
            <MudSelectItem Value="@("Cappuccino")" />
            <MudSelectItem Value="@("Cafe Latte")" />
            <MudSelectItem Value="@("Espresso")" />
            <MudSelectItem Value="@("Irish Coffee")" />
        </MudSelect>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Cancel</MudButton>
        <MudButton Color="Color.Primary" OnClick="Submit">OK</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] private MudDialogInstance MudDialog { get; set; }

    private string _name;
    private string _favoriteCoffee;

    private void Submit() 
    {
        MudDialog.Close(DialogResult.Ok(new { Name = _name, FavoriteCoffee = _favoriteCoffee }));
    }

    private void Cancel() => MudDialog.Cancel();
}