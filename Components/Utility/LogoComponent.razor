@namespace riwitalentfrontend.Components

<MudImage ObjectFit="ObjectFit.Fill" Width="200" Fluid="true" Src="@DarkLightModeImgLogo" />

@code {
    [Parameter]
    public bool IsDarkMode { get; set; }

    private string DarkLightModeImgLogo => IsDarkMode 
        ? "/images/IsologoRiwiDark.png"  // Logo para modo oscuro
        : "/images/IsologoRiwiLight.png"; // Logo para modo claro
}